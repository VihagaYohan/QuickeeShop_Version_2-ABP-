@model IEnumerable<QuickeeShop.Order.Dto.OrderBL>
@{
    ViewData["Title"] = "Index";
}

<h2>List Of Orders</h2>

<div>
    <a asp-controller="Order"
       asp-action="Create"
       class="btn btn-primary">New Order</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Order Amount</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
		{
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@order.Customer.Id</td>
                <td>@order.Customer.FullName</td>
                <td>@order.TotalAmount</td>

                <td>
                    <a asp-route-Id="@order.Id" asp-controller="Order" asp-action="Edit">Edit</a> |
                    <a asp-route-Id="@order.Id" asp-controller="Order" asp-action="Delete">Delete</a>
                </td>
            </tr>
		}
    </tbody>
</table>
