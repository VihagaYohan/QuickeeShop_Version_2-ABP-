@model IEnumerable<QuickeeShop.Customer.Dto.CustomerBL>
@{
    ViewData["Title"] = "Index";
}

<h2>Customers</h2>

<a asp-controller="Customer" 
   asp-action="Create"
   class="btn btn-primary">New Customer</a>


<table class="table table-bordered  table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FullName</td>
                <td>
                    <a role="button" asp-route-Id="@customer.Id" asp-controller="Customer" asp-action="Edit">Edit</a> | 
                    <a role="button" asp-route-Id="@customer.Id" asp-controller="Customer" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

