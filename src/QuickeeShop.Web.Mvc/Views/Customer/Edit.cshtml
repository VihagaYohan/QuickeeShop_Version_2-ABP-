@model QuickeeShop.Customer.Dto.CustomerBL
@{
    ViewData["Title"] = "Edit";
}

<h2>Update Customer </h2>

<form method="post"
      asp-controller="Customer"
      asp-action="Edit">

    <div class="form-group">
        <label>First Name</label>
        <input asp-for="@Model.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="@Model.LastName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger">Update</button>
    <a asp-controller="Customer" asp-action="Edit" class="btn btn-success">Cancel</a>
</form>

